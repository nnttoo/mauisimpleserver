<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAndroidServer.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="10">

            <Label Text="Data Received :"></Label>
            <Editor x:Name="editor" HeightRequest="100"></Editor>

            <Label Text="IP : "></Label>
            <Entry
                x:Name="entryIP"
                Text="127.0.0.1"  />
            <Label Text="IP : "></Label>

            <Entry
                x:Name="entryPort"
                Text="8989" />

            <Button
                x:Name="CounterBtn"
                Text="Start Server" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="StartServer"
                BackgroundColor="#ff00ff"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
